{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug",
            "type": "shell",
            "group": "build",
            "command": "mingw32-make",
            "args": [
                "mode=debug"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "group": "build",
            "command": "mingw32-make",
            "args": [
                "mode=release"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "group": "build",
            "command": "mingw32-make clean",
            "problemMatcher": []
        }
    ]
}